<body>
	<section>
		<Header>

		</Header>

		<div class="bg-slate-100  w-screen flex py-10">
			<div class="w-[20%] mx-5 mt-2">
				<ul>
					<li class="flex justify-center my-2">
						<Option title='Dashboard' iconName='cube' class='hover:bg-slate-300  px-2 duration-200' />
					</li>
					<li class="flex justify-center my-2">
						<Option title='Dashboard' iconName='apply' class='hover:bg-slate-300  px-2 duration-200' />

					</li>
					<li class="flex justify-center my-2">
						<Option title='Dashboard' iconName='chevron' class='hover:bg-slate-300  px-2 duration-200' />

					</li>
					<li class="flex justify-center my-2">
						<Option title='Dashboard' iconName='apply' class='hover:bg-slate-300  px-2 duration-200' />

					</li>
				</ul>
			</div>
			<div class="w-[80%] bg-white rounded-3xl flex justify-between px-10 py-20">
				<div class="w-[30%]">
				<h1 class="font-bold font-inter text-xl">Applications</h1>
				<p class="border-t-purple-600 border-t-4 my-10 text-slate-600 inline-block">You received 20 USD credits availiable</p>
